<main>

  <section id="details-page">

    <div class="main_card">
      <div class="card_left">
        <div class="card_datails">

          <h1>Title: {{title}}</h1>
          <h3>Created by an author:
            {{author.firstName}}
            {{author.lastName}}</h3>
          <div class="card_animal">
            <p class="card-keyword">Keyword: {{keyword}}</p>
            <p class="card-location">Location: {{location}}</p>
            <p class="card-date">Date: {{date}}</p>
          </div>

          <p class="disc">Description: {{description}}</p>

          <!-- If there is no registered user, do not display buttons-->
          {{#if isAuthor}}
            <a href="/posts/{{_id}}/edit" class="edit-btn">Edit</a>
            <a href="/posts/{{_id}}/delete" class="del-btn">Delete</a>
          {{else if user}}
            {{#if isVoted}}
              <p class="thanks-for-vote">Thanks For Voting</p>
            {{else}}
              <a href="/posts/{{_id}}/upvote" class="vote-up">UpVote +1</a>
              <a href="/posts/{{_id}}/downvote" class="vote-down">DownVote -1</a>
            {{/if}}
          {{/if}}
        </div>
      </div>
      <div class="card_right">
        <img src="{{imageUrl}}" alt="image" />
      </div>
    </div>

  </section>

  <section id="votes">
    <div class="vote-info">
      <div class="card_left">
        <div class="card_datails">
          <h1>Votes</h1>

          <div class="card_vote">
            <p class="PV">Total rating of votes: {{totalRating}}</p>
          </div>
          {{#if votes}}
            <p class="disc">People who voted for the post - {{votedUsers}}</p>
          {{else}}
            <p class="disc">People who voted for the post - No one has voted
              yet.</p>
          {{/if}}

        </div>
      </div>
    </div>
  </section>

</main>